{
  "manifest_version": 2,
  "name": "Top words in page",
  "version": "1.0",

  "description": "Display all the words used in the current tab ordered by usage.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": "icons/border-48.png",
    "default_title": "Top words in page"
  },

  "sidebar_action": {
    "browser_style": true,
    "default_title": "Top words in page",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/border-48.png"
  },

  "background": {
    "scripts": [
      "background_scripts/background.js"
    ]
  }
}